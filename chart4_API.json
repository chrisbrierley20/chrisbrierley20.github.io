{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number of new cases at home and at university",
    "subtitle": "Data used from an API",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "white",
    "subtitleColor": "white"
  },
  "config": {"background": "#122b39", "view": {"stroke": "transparent"}},
  "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=newCasesByPublishDateRollingRate&format=csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "line", "point": false},
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["Bristol, City of", "Mid Sussex", "Brighton and Hove"]
      }
    }
  ],
  "height": 300,
  "width": 310,
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {
        "grid": false,
        "domainColor": "white",
        "labelColor": "white",
        "tickColor": "white",
        "gridColor": "white"
      }
    },
    "y": {
      "field": "newCasesByPublishDateRollingRate",
      "type": "quantitative",
      "title": null,
      "axis": {
        "grid": false,
        "domainColor": "white",
        "labelColor": "white",
        "tickColor": "white",
        "gridColor": "white"
      }
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set1"},
      "title": "",
      "legend": {
        "orient": "top-left",
        "fillColor": "#122b39",
        "labelColor": "white"
      }
    }
  }
}