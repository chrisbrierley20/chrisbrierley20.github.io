{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Brazil GDP per capita income over time",
    "subtitle": "GDP per capita (USD) constant 2010 prices",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "#FEFEFE",
    "subtitleColor": "#B3B3B3"
  },
  "config": {"background": "#404040", "view": {"stroke": "transparent"}},
  "data": {
    "url": "https://raw.githubusercontent.com/chrisbrierley20/chrisbrierley20.github.io/main/Brazil_GDP.csv",
    "format": {"type": "csv"}
  },
  "height": 300,
  "width": 300,
  "mark": {"type": "line", "point": false, "color": "#6600CC"},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {
        "title": null,
        "grid": false,
        "domainColor": "#B3B3B3",
        "labelColor": "#FFFFFF",
        "tickColor": "#B3B3B3",
        "gridColor": "black"
      }
    },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": null,
      "axis": {
        "title": null,
        "grid": false,
        "domainColor": "#B3B3B3",
        "labelColor": "#FFFFFF",
        "tickColor": "#B3B3B3",
        "gridColor": "black"
      }
    }
  }
}