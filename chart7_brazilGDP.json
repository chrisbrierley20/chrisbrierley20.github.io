{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Brazil GDP per capita income over time",
    "subtitle": "GDP per capita (USD) constant 2010 prices",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/chrisbrierley20/chrisbrierley20.github.io/main/Brazil_GDP.csv",
    "format": {"type": "csv"}
  },
  "height": 300,
  "width": 300,
  "mark": {"type": "line", "point": false, "color": "#6600CC"},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    }
  },
  "config": {}
